{
    "extends": "./tsconfig.build.json",
    "include": ["packages/**/*", "examples/**/*"],
    "compilerOptions": {
        "incremental": true,

        "typeRoots": ["node_modules/@types"],

        "baseUrl": ".",
        "outDir": "dist",

        "paths": {
            "taddy": ["packages/taddy/src"],
            "taddy.macro": ["packages/taddy.macro/src"],
            "@taddy/core": ["packages/core/src"],
            "@taddy/babel-plugin": ["packages/babel-plugin/src"]
        }
    }
}
