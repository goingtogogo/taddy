{
    "private": true,
    "name": "root",
    "workspaces": [
        "@taddy/*",
        "@examples/*",
        "@docs/*",
        "taddy",
        "taddy.macro"
    ],
    "license": "MIT",
    "engines": {
        "node": ">=10"
    },
    "scripts": {
        "lerna": "lerna",
        "start": "lerna run start --stream --parallel --no-private",
        "test": "lerna run test",
        "build": "lerna run build --parallel --no-private",
        "prewebsite:build": "yarn build",
        "website:build": "yarn lerna exec --scope @taddy/website next build",
        "website:dev": "yarn lerna exec --scope @taddy/website next dev"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run lint"
        }
    },
    "prettier": {
        "printWidth": 80,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "all",
        "bracketSpacing": false
    },
    "devDependencies": {
        "@babel/core": "7.21.0",
        "@babel/preset-env": "^7.20.2",
        "@babel/preset-typescript": "^7.21.0",
        "@types/jest": "^29.4.0",
        "babel-jest": "29.5.0",
        "happy-dom": "^8.9.0",
        "husky": "8.0.3",
        "jest": "^29.5.0",
        "jest-environment-jsdom": "^29.5.0",
        "lerna": "6.5.1",
        "typescript": "4.9.5"
    }
}
