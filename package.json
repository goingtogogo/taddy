{
    "private": true,
    "name": "root",
    "workspaces": [
        "examples/*",
        "packages/*",
        "website"
    ],
    "license": "MIT",
    "engines": {
        "node": ">=10"
    },
    "scripts": {
        "lerna": "lerna",
        "start": "lerna run start --stream --parallel --no-private",
        "test": "tsdx test",
        "lint": "tsdx lint 'packages/**/*.ts'",
        "ts": "tsc --noEmit",
        "build": "lerna run build --parallel --no-private",
        "prewebsite:build": "yarn build",
        "website:build": "yarn lerna exec --scope @taddy/website next build",
        "website:dev": "yarn lerna exec --scope @taddy/website next dev"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run lint"
        }
    },
    "prettier": {
        "printWidth": 80,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "all",
        "bracketSpacing": false
    },
    "resolutions": {
        "@typescript-eslint/eslint-plugin": "4.9.0",
        "prettier": "^2.2.1",
        "typescript": "^4.1.2"
    },
    "devDependencies": {
        "@babel/core": "7.11.6",
        "@babel/preset-env": "7.12.1",
        "@babel/preset-typescript": "7.10.4",
        "husky": "^4.2.5",
        "lerna": "^3.22.1",
        "tsdx": "^0.14.1",
        "tslib": "^2.0.1",
        "typescript": "^4.1.2",
        "babel-jest": "^26.3.0"
    }
}
